{
  "name": "@marinade.finance/marinade-ts-sdk",
  "version": "5.0.0",
  "description": "Marinade SDK for Typescript",
  "repository": "https://github.com/marinade-finance/marinade-ts-sdk",
  "author": {
    "name": "Marinade.Finance",
    "url": "https://marinade.finance/"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "module": "dist/esm/src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rm -rf dist && pnpm build:node && pnpm build:browser && pnpm webpack",
    "build:node": " npx tsc -p tsconfig.cjs.json --noEmit false",
    "build:browser": "npx tsc -p tsconfig.esm.json --noEmit false",
    "clean": "gts clean",
    "prepare": "husky install",
    "pretest": "pnpm lint",
    "test": "pnpm test:unit",
    "test:unit": "jest --preset ts-jest --roots '<rootDir>/src'",
    "test:integration": "jest --preset ts-jest --testTimeout 90000 --runInBand --roots '<rootDir>/test'",
    "lint": "gts lint",
    "lint:fix": "gts fix",
    "prepack": "pnpm test && pnpm build"
  },
  "keywords": [
    "solana",
    "marinade.finance",
    "blockchain",
    "staking"
  ],
  "license": "ISC",
  "dependencies": {
    "@coral-xyz/anchor": "^0.27.0",
    "@marinade.finance/directed-stake-sdk": "^0.0.4",
    "@solana/spl-token": "^0.3.7"
  },
  "peerDependencies": {
    "borsh": "^0.7.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "gts": "^3.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-each": "^29.5.0",
    "lint-staged": "^13.2.2",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "terser-webpack-plugin": "^5.3.7",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "@solana/web3.js": "^1.74.0",
    "bn.js": "^5.2.1",
    "jsbi": "^4.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "test/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
